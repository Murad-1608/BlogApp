@using UI.Models.ViewModels;
@model PasswordChangeViewModel
@{
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}


<div class="card-body">
                    <h4 class="card-title">Parolu dəyiş</h4>                   
                    <br />
                    <form class="forms-sample" asp-controller="Writer" asp-action="PasswordChange" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <div class="form-group">
                        <label for="exampleInputName1">Mövcud parol</label>
                        <input type="password" asp-for="Password" class="form-control" id="exampleInputName1" placeholder="Parol">
                        <span asp-validation-for="Password" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputName1">Yeni parol</label>
                        <input type="password" asp-for="NewPassword" class="form-control" id="exampleInputName1" placeholder="Yeni parol">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                      </div>
                      <div class="form-group">
                        <label for="exampleInputName1">Təkrar</label>
                        <input type="password" asp-for="ConfrimPassword" class="form-control" id="exampleInputName1" placeholder="Yeni parolu təkrar yazın">
                        <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                      </div>
                      <button type="submit" class="btn btn-primary btn-sm">Təstiqlə</button>
                      <a asp-action="Blogs" asp-controller="Writer" class="btn btn-white btn-sm">Ləğv et</a>
                    </form>
                  </div>