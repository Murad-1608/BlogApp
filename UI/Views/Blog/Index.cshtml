@using Entity.Concrete
@model List<Blog>
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bloqlar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">



                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 card">
                            <a href="/Blog/BlogDetails/@item.Id">
                                <img src="~/Images/Blog/@item.Image" class="card-img-top img-fluid" alt="" style="width:350px; height:250px;">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="Blog/BlogDetails/@item.Id">
                                            <i class="far fa-calendar-alt"></i> @item.CreateDate.ToShortDateString()
                                        </a>
                                    </li>
                                    <li>
                                        <a href="Blog/BlogDetails/@item.Id">
                                            <i class="fas fa-eye"></i> @item.Seen
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogDetails/@item.Id">@item.Title</a>
                                </h5>

                                @*CONTENT*@
                                @if (item.Content.Length <= 29)
                                {

                                    <p class="card-text mb-3">@item.Content</p>
                                    <br />

                                }
                                else
                                {
                                    <p class="card-text mb-3">@item.Content.Substring(0, 30)...</p>
                                }

                                <a href="/Blog/BlogDetails/@item.Id" class="btn btn-primary read-m">Dəvamını oxu</a>
                            </div>
                        </div>

                        <br />
                        <br />
                        <br />

                    }



                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
<!--//main-->
