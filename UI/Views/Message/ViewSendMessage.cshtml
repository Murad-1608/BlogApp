@using Entity.Concrete;
@model Message
@{
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="wrapper wrapper-content">
        <div class="row">
                       <partial name="~/PartialViews/WriterLayout/MessageTransactions.cshtml"/> 

            <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Mesaj
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">


                    <h3>
                        <span class="font-normal">Mövzu: </span>@Model.Subject
                    </h3>
                    <br />
                    <h5>
                        <span class="font-normal">Aldı: </span>@Model.Receiver.UserName
                    </h5>
                    <h5>
                        <span class="float-right font-normal">@Model.CreateDate.ToString("hh:mm tt") / @Model.CreateDate.ToString("dd MMMM yyyy")</span>
                    </h5>
                </div>
            </div>
                <div class="mail-box">             


                <div class="mail-body">
                    <textarea class="form-control" name="Content" placeholder="Mesaj yazın" style="min-height:200px" disabled>@Model.Content</textarea>                      
                </div>

                @if (Model.File != null)
                {
                                         <div class="mail-attachment">
                                         <div class="attachment">
                                        <div class="file-box">
                                            <div class="file">
                                                    <a href="~/Message/DownloadFile/?filePath=@Model.File">
                                                    <span class="corner"></span>

                                                    <div class="icon">
                                                        <i class="fa fa-file"></i>
                                                    </div>
                                                    <div class="file-name">
                                            @Model.File
                                                        <br/>
                                                        <small>Göndərildi: @Model.CreateDate.ToString("dd MMMM yyyy")</small>
                                                    </div>
                                                </a>
                                            </div>
                                                </div>

                                        <div class="clearfix"></div>
                                            </div>
                                            </div>
                }

                        <div class="mail-body text-right tooltip-demo">
                                <a title="" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white" href="/Message/Delete/@Model.Id/"><i class="fa fa-trash-o"></i> Sil</a>
                        </div>
                        <div class="clearfix"></div>
                </div>
            </div>
        </div>
        </div>