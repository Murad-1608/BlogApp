@using Entity.Concrete;
@model List<Blog> 

<div class="tech-btm">
                    <h3>Son bloqlar</h3>
    @foreach (var item in Model)
    {
                    <div class="blog-grids row mb-3">
                                    <div class="col-md-5 blog-grid-left">
                                            <a href="/Blog/BlogDetails/@item.Id">
                                                <img src="~/Images/Blog/@item.Image" class="card-img-top img-fluid" alt="" style="width:150px; height:100px">
                                        </a>
                                    </div>
                                    <div class="col-md-7 blog-grid-right">

                                        <h5>
                                                    <a href="/Blog/BlogDetails/@item.Id">@item.Title</a>
                                        </h5>
                                        <div class="sub-meta">
                                            <span>
                                                <i class="far fa-clock"></i> @item.CreateDate.ToShortDateString()
                                            </span>
                                        </div>
                                    </div>

                                </div>
    }
                </div>
